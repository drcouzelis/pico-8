pico-8 cartridge // http://www.pico-8.com
version 35
__lua__
w=8*2
h=8*2

function _init()
 x=(128/2)-(w/2)
 y=(128/4)-(h/2)
 dy=0
 palt(0,false)
 palt(8,true)
end

function _update()
 if btnp(4) then
  dy=6
 end
 
 -- add gravity
 dy+=1
 y+=dy
 if y>=128-h then
  y=128-h
  dy*=-1
 end
end

function _draw()
 cls(1)
 spr(1,x,y,2,2)
end

