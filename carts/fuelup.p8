pico-8 cartridge // http://www.pico-8.com
version 33
__lua__
-- fuel up
-- by david couzelis

hero_x=60
hero_y=60
hero_l=false

speed=1

map_x=1024
map_y=512

anim_reset=6
anim_timer=0
anim_frame=0

function _init()
 -- black not clear
 palt(0,false)
 anim_timer=anim_reset
end

--
-- return true if there is a
-- collision on the map at
-- the given location
--
function map_hit(x,y)
 left=x/8
 right=(x+7)/8
 top=y/8
 bottom=(y+7)/8
 if
  fget(mget(left,top),1) or
  fget(mget(left,bottom),1) or
  fget(mget(right,top),1) or
  fget(mget(right,bottom),1)
 then
  return true
 end
 return false
end

--
-- move the hero
--
-- change the direction the
-- hero is facing, if needed
--
-- collision detection is
-- taken into account
--
function move_hero(newx,newy)
 -- check the four corners
 -- of the hero for collisions
 
 if not map_hit(newx,newy) then
  if newx<hero_x then
   -- facing left
   hero_l=true
  elseif newx>hero_x then
   hero_l=false
  end
  hero_x=newx
  hero_y=newy
 end
end

function _update()
 -- controls
 if btn(0) then
  move_hero(hero_x-speed,hero_y)
 end
 if btn(1) then
  move_hero(hero_x+speed,hero_y)
 end
 if btn(2) then
  move_hero(hero_x,hero_y-speed)
 end
 if btn(3) then
  move_hero(hero_x,hero_y+speed)
 end
 -- loop the planet
 if hero_x>=map_x then
  hero_x-=map_x
 elseif hero_x<0 then
  hero_x+=map_x
 end
 if hero_y>=map_y then
  hero_y-=map_y
 elseif hero_y<0 then
  hero_y+=map_y
 end
 -- animate
 anim_timer-=1
 if anim_timer==0 then
  anim_frame+=1
  if anim_frame>1 then
   anim_frame=0
  end
  anim_timer=anim_reset
 end
 -- update the camera position
 camera(hero_x-60,hero_y-60)
end

function draw_map()
 -- draw the extended bottom
 -- half 64 tiles of the map
 -- by default only 32 tiles
 -- are drawn
 map(0,0,0,0,128,64)
 -- draw the map extra times
 -- on all sides to produce
 -- a wrapping effect
 -- left
 map(0,0,-map_x,0,128,64)
 -- right
 map(0,0,map_x,0,128,64)
 -- up
 map(0,0,0,-map_y,128,64)
 -- down
 map(0,0,0,map_y,128,64)
 -- up / left
 map(0,0,-map_x,-map_y,128,64)
 -- up / right
 map(0,0,map_x,-map_y,128,64)
 -- down / left
 map(0,0,-map_x,map_y,128,64)
 -- down / right
 map(0,0,map_x,map_y,128,64)
end

function _draw()
 -- clear screen to black
 cls(0)
 -- draw map
 palt(14,false)
 palt(6,true) -- gray is clear
 draw_map()
 -- draw hero
 palt(6,false)
 palt(14,true) -- pink is clear
 spr(1+anim_frame,hero_x,hero_y,1,1,hero_l)
end
