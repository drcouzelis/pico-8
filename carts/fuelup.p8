pico-8 cartridge // http://www.pico-8.com
version 33
__lua__
-- fuel up
-- by david couzelis

hero_x=60
hero_y=60
hero_l=false

anim_reset=10
anim_timer=0
anim_frame=0

function _init()
 -- black not clear
 palt(0,false)
 anim_timer=anim_reset
end

function _update()
 -- controls
 if btn(0) then
  hero_x-=1
  hero_l=true
 end
 if btn(1) then
  hero_x+=1
  hero_l=false
 end
 if btn(2) then hero_y-=1 end
 if btn(3) then hero_y+=1 end
 -- animate
 anim_timer-=1
 if anim_timer==0 then
  anim_frame+=1
  if anim_frame>1 then
   anim_frame=0
  end
  anim_timer=anim_reset
 end
end

function _draw()
 -- clear screen to black
 cls(0)
 -- draw map
 palt(14,false)
 palt(6,true) -- gray is clear
 camera(hero_x-60,hero_y-60)
 map()
 -- draw hero
 palt(6,false)
 palt(14,true) -- pink is clear
 spr(1+anim_frame,hero_x,hero_y,1,1,hero_l)
end
