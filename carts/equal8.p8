pico-8 cartridge // http://www.pico-8.com
version 35
__lua__
x=0
dx=0

y=0
c=1 -- color

function randdist()
 return flr(rnd(16))+2
end

function _init()
 cls(0)
 dx=randdist()
end

function _update()
 -- x
 x+=dx
 dx-=1
 if x<=0 then
  x=0
  dx=randdist()
  
  -- color
  newc=flr(rnd(15))+1
  if newc==c then
   newc=(newc+1)%15+1
  end
  c=newc
 end
 
 -- y
 y+=1
 if y>=128 then
  y=0
 end
 
end

function _draw()
 --cls(0)
 --pset(x,y,c)
 line(0,y,x,y,c)
 --line(x,0,x,y,c)
end
